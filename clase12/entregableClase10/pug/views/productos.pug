html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        <!-- bootstrap css only -->
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")

        title Entregable Clase 10 - Pug

    body

        if productos.length>0 
            table(class="table")
                thead
                        tr
                            th(scope="col") Title
                            th(scope="col") Price
                            th(scope="col") Imagen
                tbody
                    each producto in productos 
                        tr
                            th(scope="row")= producto.title
                            td(class="mr-5")= producto.price
                            td(class="mr-5")
                                img(src= producto.thumbnail width="40px" alt=`Imagen de ${producto.title}`)
        else
            <p>No se encontraron datos</p>            


        form(action="/" method="get")
            button(type="submit" class="btn btn-primary mt-2") Cargar productos


        <!-- JavaScript Bundle with Popper -->
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")