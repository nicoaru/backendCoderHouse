html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        <!-- bootstrap css only -->
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")

        title Entregable Clase 10 - Pug

    body
        h2 Cargar un producto
        form(action="/productos" method="post")

            div(class="col-lg-3 mt-2")
                label(for="title" class="visually-hidden") Title
                input(type="text" id="title" name="title" placeholder="Title" class="form-control" required)

            div(class="col-lg-3 mt-2")
                label(for="price"  class="visually-hidden") Price
                input(type="text" id="price" name="price" placeholder="Price" class="form-control" required)

            div(class="col-lg-3 mt-2")
                label(for="thumbnail"  class="visually-hidden") Thumbnail
                input(type="text" id="thumbnail" name="thumbnail" placeholder="Thmbnail" class="form-control" required)

            button(type="submit" class="btn btn-primary mt-2") Cargar

        form(action="/productos" method="get")
            button(type="submit" class="btn btn-primary mt-2") Ver productos


        <!-- JavaScript Bundle with Popper -->
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")